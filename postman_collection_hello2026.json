{
  "info": {
    "name": "Hello2026 API",
    "description": "Postman collection for testing Hello2026 products endpoints (GET/POST/PUT/DELETE) with validation checks.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Products",
      "item": [
        {
          "name": "GET All Products",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/products",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 200', function () {",
                  "  pm.expect(pm.response.code).to.eql(200);",
                  "});",
                  "pm.test('Response is an array', function () {",
                  "  pm.expect(Array.isArray(pm.response.json())).to.be.true;",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "POST Create Product (valid)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Bag\",\n  \"price\": 45\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/products",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 200 or 201', function () {",
                  "  pm.expect([200,201]).to.include(pm.response.code);",
                  "});",
                  "const data = pm.response.json();",
                  "pm.test('Response has id, title and price', function () {",
                  "  pm.expect(data).to.have.property('id');",
                  "  pm.expect(data.title).to.eql('Bag');",
                  "  pm.expect(data.price).to.eql(45);",
                  "});",
                  "// Save created id for later requests",
                  "pm.collectionVariables.set('productId', pm.response.json().id);"
                ]
              }
            }
          ]
        },
        {
          "name": "POST Create Product (unknown field)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Bag\",\n  \"price\": 45,\n  \"extra\": \"x\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/products",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 400', function () {",
                  "  pm.expect(pm.response.code).to.eql(400);",
                  "});",
                  "pm.test('Message mentions unknown properties', function () {",
                  "  const body = pm.response.json();",
                  "  pm.expect(body.message).to.be.a('string');",
                  "  pm.expect(body.message).to.include('Unknown properties');",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "POST Create Product (invalid price)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Bag\",\n  \"price\": \"abc\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/products",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 400', function () {",
                  "  pm.expect(pm.response.code).to.eql(400);",
                  "});",
                  "pm.test('Validation message present', function () {",
                  "  const body = pm.response.json();",
                  "  pm.expect(body.message).to.be.a('string');",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "GET Product by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/products/{{productId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products", "{{productId}}"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 200', function () {",
                  "  pm.expect(pm.response.code).to.eql(200);",
                  "});",
                  "pm.test('Correct product returned', function () {",
                  "  const data = pm.response.json();",
                  "  pm.expect(data.id).to.eql(parseInt(pm.collectionVariables.get('productId')));",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "PUT Update Product",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Bag Updated\",\n  \"price\": 55\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/products/{{productId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products", "{{productId}}"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 200', function () {",
                  "  pm.expect(pm.response.code).to.eql(200);",
                  "});",
                  "pm.test('Update message present', function () {",
                  "  const body = pm.response.json();",
                  "  pm.expect(body.message).to.include('updated');",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "DELETE Product",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/products/{{productId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products", "{{productId}}"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 200', function () {",
                  "  pm.expect(pm.response.code).to.eql(200);",
                  "});",
                  "pm.test('Delete message present', function () {",
                  "  const body = pm.response.json();",
                  "  pm.expect(body.message).to.include('deleted');",
                  "});",
                  "// Clean up variable",
                  "pm.collectionVariables.unset('productId');"
                ]
              }
            }
          ]
        }
      ]
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000" },
    { "key": "productId", "value": "" }
  ]
}
